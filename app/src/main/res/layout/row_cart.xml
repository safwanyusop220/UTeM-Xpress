<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/shape_rect08_top_corner_radius_white"
    android:elevation="10dp"
    android:layout_margin="5dp"

    >

    <ImageView
        android:id="@+id/productIconIv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:background="@null" />


    <TextView
        android:id="@+id/itemTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/productIconIv"
        android:text="Item Title"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/itemPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemTitleTv"
        android:layout_toEndOf="@id/productIconIv"
        android:gravity="center"
        android:text="RM10.00"
        android:textColor="@color/black"

        />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/itemRemoveTv"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/itemPriceEachTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="10/pieces"
            android:textColor="@color/black"
            />

<!--        <TextView-->
<!--            android:id="@+id/itemQuantityTv"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:text="[3]"-->
<!--            android:layout_marginStart="4dp"-->
<!--            android:textColor="@color/black"-->
<!--            />-->

    </LinearLayout>

    <TextView
        android:id="@+id/itemRemoveTv"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@id/itemTitleTv"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape_rect_remove"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="Remove"
        android:textColor="@color/white" />





    <TextView
        android:id="@+id/itemQuantityTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="[3]"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>