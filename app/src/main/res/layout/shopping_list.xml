<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent"
    tools:context=".activity.user.ShoppingList"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    <RelativeLayout
        android:id="@+id/topbarRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_top_bar_white">

        <ImageView
            android:id="@+id/logoIv"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:padding="3dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/utem_word" />

        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:padding="3dp"
            android:background="@null"
            android:src="@drawable/ic_exit_blue" />

        <TextView
            android:id="@+id/greetingTv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/logoIv"
            android:background="@drawable/shape_text_rect_blue" />

        <TextView
            android:id="@+id/helloTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoIv"
            android:layout_marginStart="10dp"
            android:text="Hello Safwan,"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/helloTv"
            android:layout_marginStart="10dp"
            android:text="want to book your slot? "
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/text1"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_rect_top_bar_white" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue02_login"
            android:textStyle="normal"
            android:textSize="8sp"
            android:layout_below="@+id/text1"
            android:text="book now to secure a convenient time? "
            android:layout_marginStart="10dp"
            />

        <Button
            android:id="@+id/bookSlotBtn"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rect04_btn"
            android:text="Book a Slot"
            android:textSize="9sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/bookSlotBtn"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_rect_top_bar_white" />


        <LinearLayout
            android:id="@+id/browseGroceriesTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookSlotBtn"
            android:weightSum="4">

            <TextView
                android:id="@+id/iconSwapVerticalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="33dp"
                android:drawableStart="@drawable/ic_shop_blue"
                android:padding="5dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="50dp"
                android:padding="5dp"
                android:text="Browse all groceries"
                android:textColor="@color/blue02_login"
                android:textSize="12sp"
                android:textStyle="bold"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="100dp"
                android:drawableStart="@drawable/ic_next_blue"
                android:padding="5dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/specialOfferTv"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/browseGroceriesTv"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_rect_top_bar_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/browseGroceriesTv"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Special Offers !!!"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paymentAtDoorTv"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@+id/specialOfferTv"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_rect_top_bar_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/specialOfferTv"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="205dp"
                android:layout_height="265dp"
                android:background="@drawable/shape_rect_top_bar_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="80dp"
                    android:text="Payment At Door"

                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="100dp"
                    android:layout_weight="1"
                    android:text="is now Available"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="125dp"
                    android:background="@drawable/button_in_white"
                    android:drawableRight="@drawable/ic_next_blue"
                    android:text="Shop Now"
                    android:textAllCaps="false"
                    android:textColor="@color/blue02_login"
                    android:textSize="11sp"
                    android:textStyle="normal" />


                //paymentDoor section


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="206dp"
                android:layout_height="265dp"
                android:background="@drawable/shape_rect_top_bar_white_no_outline"

                >

                <ImageView
                    android:id="@+id/iconIv"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="215dp"
                    android:layout_marginStart="140dp"
                    app:srcCompat="@drawable/icon" />

                <ImageView
                    android:id="@+id/utemWordIv"
                    android:layout_width="60dp"
                    android:layout_height="50dp"

                    app:srcCompat="@drawable/utem_word" />



                //Description section


            </RelativeLayout>




        </LinearLayout>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>


