<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:layout_margin="5dp"
    android:background="@color/black"
    app:cardCornerRadius="15dp"
    >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/productImageIv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/productNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/productImageIv"
            android:text="Name Of Product"
            android:textColor="@color/blue02_login"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/discountedPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productNameTv"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/productImageIv"
            android:text="Price"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/discountedPriceTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discountedPriceTv"
            android:layout_toEndOf="@+id/productImageIv"
            android:text="Price"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="8dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discountedPriceTv"
            android:layout_toEndOf="@+id/discountedPriceTv1"
            android:text="/Each"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="8dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_rect04_btn"
            android:text="ADD"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>

